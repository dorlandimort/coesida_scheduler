<%= content_for :head do %>
  <%= stylesheet_link_tag 'datatables/datatables' %>
  <%= javascript_include_tag 'datatables/datatables' %>
  <%= javascript_include_tag 'datatables/datatables_es' %>
  <%= javascript_include_tag 'bootbox/bootbox' %>
  <%= javascript_include_tag 'util/fetch' %>
  <%= javascript_include_tag 'app/receptionists/index' %>
<% end %>
<%= content_for :page_title do  %>
  <%= render partial: 'shared/page_title', locals: { title: 'Recepcionistas' } %>
<% end %>
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="card">
      <div class="card-body">
        <div class="pull-right">
          <a href="<%= new_receptionist_path %>" class="btn btn-primary btn-xs"><i class="s7-plus"></i> Nuevo</a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover table-fw-widget" id="receptionists_datatable" data-source="<%= receptionists_path(format: :json) %>">
            <thead>
            <tr>
              <th>Nombre</th>
              <th>A. Paterno</th>
              <th>A. Materno</th>
              <th>C.T</th>
              <th></th>
            </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>